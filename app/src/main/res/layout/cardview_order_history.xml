<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    app:cardUseCompatPadding="true"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">
    <LinearLayout
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:orientation="horizontal"
            android:layout_width="match_parent" android:layout_height="wrap_content">
        <ImageView
                android:clickable="true"
                android:id="@+id/order_list_icon"
                android:src="@drawable/ic_order"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_width="100dp" android:layout_height="100dp"/>
        <LinearLayout
                android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/order_list_id"
                    android:text="Order ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:text="ItemName"
                    android:id="@+id/order_list_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/order_list_quant"
                    android:text="ItemQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/order_list_price"
                    android:text="FinalPrice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/order_list_status"
                    android:text="OrderStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>